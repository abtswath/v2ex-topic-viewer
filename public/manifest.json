{
  "manifest_version": 3,
  "name": "v2ex topic viewer",
  "description": "支持 V2EX 在主题列表页分屏浏览主题内容",
  "version": "0.0.5",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon_16.png",
      "24": "assets/icon_24.png",
      "32": "assets/icon_32.png"
    }
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png",
    "256": "icon_256.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "./content.js"
      ],
      "matches": [
        "*://*.v2ex.com/*"
      ]
    }
  ]
}
