{
  "manifest_version": 3,
  "name": "V++",
  "description": "view v2ex topic content under topic",
  "version": "0.0.2",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon_16.png",
      "24": "assets/icon_24.png",
      "32": "assets/icon_32.png"
    }
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png",
    "256": "icon_256.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "./content.js"
      ],
      "matches": [
        "https://v2ex.com/*",
        "https://www.v2ex.com/*"
      ]
    }
  ]
}
